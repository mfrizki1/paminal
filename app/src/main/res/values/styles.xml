<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="fontFamily">sans-serif</item>
        <item name="buttonStyle">@style/Widget.Button</item>

    </style>

    <style name="SplashScreenStyle" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge" />

    <style name="TextAppearance.App.TextView" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/text_12</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextAppearance.App.TextView.Toolbar" parent="@style/TextAppearance.App.TextView">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_20</item>
    </style>

    <style name="TextAppearance.App.TextView.H4" parent="@style/TextAppearance.App.TextView">
        <item name="android:textSize">@dimen/text_18</item>
    </style>

    <style name="TextAppearance.App.TextView.H5.White" parent="@style/TextAppearance.App.TextView">
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="TextAppearance.App.TextView.H5.White.Bold" parent="@style/TextAppearance.App.TextView.H5.White">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/onyx</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/manatee</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="Widget.Button" parent="Widget.MaterialComponents.Button">
        <item name="background">@color/colorPrimary</item>
        <item name="android:layout_marginLeft">@dimen/space_12dp</item>
        <item name="android:layout_marginRight">@dimen/space_12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UnselectedButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginLeft">@dimen/space_12dp</item>
        <item name="android:layout_marginRight">@dimen/space_12dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleText" parent="TextAppearance.App.TextView">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/space_8dp</item>
        <item name="android:layout_marginLeft">@dimen/space_12dp</item>
        <item name="android:layout_marginRight">@dimen/space_12dp</item>
    </style>

    <style name="JustText" parent="TextAppearance.App.TextView">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:layout_marginTop">@dimen/space_8dp</item>
        <item name="android:layout_marginLeft">@dimen/space_12dp</item>
        <item name="android:layout_marginRight">@dimen/space_12dp</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>