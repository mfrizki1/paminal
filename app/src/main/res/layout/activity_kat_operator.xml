<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.manajemen.KatOperatorActivity">
    <include layout="@layout/layout_toolbar_white" />

    <include layout="@layout/view_separator" />
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_personel_operator"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/space_12dp"
        android:layout_marginVertical="@dimen/space_8dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/space_8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_8dp"
                android:gravity="center"
                android:text="POLISI"
                android:textColor="@color/white"
                android:textSize="@dimen/text_28"
                android:textStyle="bold" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btn_sipil_operator"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginHorizontal="@dimen/space_12dp"
        android:layout_marginVertical="@dimen/space_8dp"
        android:layout_marginTop="36dp"
        app:cardBackgroundColor="@color/prince_ton_orange"
        app:cardCornerRadius="@dimen/space_8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_personel_polda">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_8dp"
                android:gravity="center"
                android:text="SIPIL"
                android:textColor="@color/white"
                android:textSize="@dimen/text_28"
                android:textStyle="bold" />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</LinearLayout>