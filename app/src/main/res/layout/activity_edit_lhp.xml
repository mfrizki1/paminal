<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.lhp.EditLhpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_white" />

        <include layout="@layout/view_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_12dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="No LHP">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_no_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/space_8dp"
                android:text="Pendahuluan"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Isi Pengaduan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_isi_pengaduan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="No Surat Perintah Penyelidikan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_no_sp_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_lp_lhp_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Pilih Laporan Polisi"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/space_12dp"
                    android:layout_marginVertical="@dimen/space_8dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_jenis_lp_lhp_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Laporan Polisi"
                        android:textSize="@dimen/text_14"
                        android:textStyle="bold" />

                    <include
                        layout="@layout/layout_separator"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/space_half" />

                    <TextView
                        android:id="@+id/txt_no_lp_lhp_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_half"
                        android:text="Laporan Polisi"
                        android:textSize="@dimen/text_12"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_nama_personel_lhp_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_half"
                        android:text="Nama Personel"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/txt_pangkat_nrp_personel_lhp_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_half"
                        android:text="Pangkat, NRP"
                        android:textSize="@dimen/text_10" />


                    <TextView
                        android:id="@+id/txt_jabatan_personel_lhp_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_half"
                        android:text="JABATAN"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/txt_kesatuan_personel_lhp_edit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_half"
                        android:text="Kesatuan"
                        android:textSize="@dimen/text_10" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <include layout="@layout/layout_separator" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="Waktu Penugasan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_waktu_penugasan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="Tempat Penyelidikan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_tempat_penyelidikan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="Tugas Pokok">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_tugas_pokok_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="Rencana Pelaksanaan Penyelidikan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_rencana_pelaksanaan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="Pelaksanaan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_pelaksanaan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/space_8dp"
                android:text="Fakta-Fakta"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Pokok Permasalahan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_pokok_permasalahan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:hint="Keterangan Ahli">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_keterangan_ahli_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>


            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/space_8dp"
                android:text="Kesimpulan &amp; Rekomendasi"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Kesimpulan">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_kesimpulan_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Rekomendasi">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_rekomendasi_lhp_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/space_8dp"
                android:text="Ketua Tim"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

           <include layout="@layout/layout_separator"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/space_8dp"
                android:text="Apakah Laporan Ini Terbukti Atau Tidak?"
                android:textSize="@dimen/text_16"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg_terbukti_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/space_12dp">

                <RadioButton
                    android:id="@+id/rb_terbukti_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Terbukti" />

                <RadioButton
                    android:id="@+id/rb_tidak_terbukti_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tidak Terbukti" />

            </RadioGroup>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_lhp_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="@string/save"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>