<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.lp.kke.DetailLpKkeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_white" />

        <include layout="@layout/view_separator" />


        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Laporan Polisi" />

        <TextView
            android:id="@+id/txt_detail_no_lp_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="LP/ LP / lp"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />
        <LinearLayout
            android:id="@+id/ll_ref_lp_detail_kke"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Referensi Laporan" />
            <TextView
                android:id="@+id/txt_ref_lp_detail_kke"
                style="@style/JustText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No LHP" />
            <include layout="@layout/line_separator" />

        </LinearLayout>

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personel Terlapor" />

        <TextView
            android:id="@+id/txt_detail_nama_terlapor_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Nama : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_pangkat_nrp_terlapor_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Pangkat : NRP : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_jabatan_terlapor_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Jabatan : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_kesatuan_terlapor_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kesatuan : "
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />
        <!--personel pelapor-->
        <LinearLayout
            android:id="@+id/ll_detail_personel_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personel Pelapor" />

            <TextView
                android:id="@+id/txt_detail_nama_pelapor_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Nama : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_pangkat_nrp_pelapor_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Pangkat : NRP : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_jabatan_pelapor_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Jabatan : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_kesatuan_pelapor_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Kesatuan : "
                android:textSize="@dimen/text_16" />

            <include layout="@layout/layout_separator" />

        </LinearLayout>
        <!--sipil pelapor-->
        <LinearLayout
            android:id="@+id/ll_detail_sipil_kke"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sipil Pelapor" />

            <TextView
                android:id="@+id/txt_detail_nama_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Nama : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_ttl_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="TTL : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_jk_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Jenis Kelamin : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_agama_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Agama : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_pekerjaan_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Pekerjaan : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_kwg_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Kewarganegaraan : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_alamat_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Alamat : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_no_telp_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="No Telp : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_nik_sipil_kke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Nik Ktp : "
                android:textSize="@dimen/text_16" />

            <include layout="@layout/line_separator" />


        </LinearLayout>

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Isi Laporan" />

        <TextView
            android:id="@+id/txt_detail_isi_laporan_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="@string/paragraf"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alat Bukti" />

        <TextView
            android:id="@+id/txt_detail_alat_bukti_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Lorem ipsum\nlpremipsum\nlpem iptun"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasal Yang Dilanggar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_pasal_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_half"
            tools:listitem="@layout/item_pasal_lp" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Saksi" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_saksi_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_half"
            tools:listitem="@layout/item_pasal_lp" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibuat Laporan" />

        <TextView
            android:id="@+id/txt_detail_kota_buat_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kota : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_tgl_buat_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Tanggal : "
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pimpinan" />

        <TextView
            android:id="@+id/txt_detail_nama_pimpinan_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Nama : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_pangkat_nrp_pimpinan_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="PAngkat: NRP : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_jabatan_pimpinan_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Jabatan : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_kesatuan_pimpinan_kke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kesatuan : "
            android:textSize="@dimen/text_16"
            android:visibility="gone" />

        <include layout="@layout/layout_separator" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_kke"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Laporan" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_pasal_kke"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Pasal Yang Dilanggar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_saksi_kke"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Saksi" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_kke"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate_dokumen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_lihat_dok_kke"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lihat Dokumen" />
    </LinearLayout>


</ScrollView>