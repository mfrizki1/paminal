<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.lp.pasal.DetailPasalActivity">

    <include layout="@layout/layout_toolbar_white" />

    <include layout="@layout/view_separator" />

    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pasal" />

    <TextView
        android:id="@+id/txt_nama_pasal_detail"
        style="@style/JustText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Pasal" />


    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Pasal" />

    <TextView
        android:id="@+id/txt_tentang_pasal_detail"
        style="@style/JustText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tentang Pasal" />

    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi Pasal" />

    <TextView
        android:id="@+id/txt_isi_pasal_detail"
        style="@style/JustText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Isi Pasal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_edit_pasal_detail"
        style="@style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:text="Edit Data Pasal" />
</LinearLayout>