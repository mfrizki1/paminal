        <TextView
            android:id="@+id/txt_no_skhd_rps_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No SKHD" />

        <include layout="@layout/line_separator" />

        <TextView
