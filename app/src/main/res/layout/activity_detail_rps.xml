            android:layout_height="wrap_content"
            android:text="Isi Rekomendasi" />

        <TextView
            android:id="@+id/txt_isi_rekomedasi_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
