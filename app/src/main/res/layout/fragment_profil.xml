<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.profil.ProfilFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_profil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/ll_profil"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_account"
            app:tint="@color/onyx" />

        <LinearLayout
            android:id="@+id/ll_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nama_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Muhammad Faisal Rizki"
                android:textSize="@dimen/text_24"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_jenis_hak_akses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="OPERATOR"
                android:textSize="@dimen/text_18" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_logout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="LOGOUT"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_change_password"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Ubah Password"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manajemen_admin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Manajemen Admin"
                android:visibility="gone"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manajemen_operator"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Manajemen Operator"
                android:textColor="@color/colorPrimary"
                app:backgroundTint="@color/white"
                app:strokeColor="@color/colorPrimary"
                app:strokeWidth="2dp" />

        </LinearLayout>


    </RelativeLayout>
</FrameLayout>