<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/cv_personel_acc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_12dp"
    android:layout_marginTop="@dimen/space_8dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/colorPrimary"
    app:strokeWidth="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/space_8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_judul_acc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personel"
            android:textSize="@dimen/text_18"
            android:textStyle="bold" />

        <include layout="@layout/layout_separator" />

        <TextView
            android:id="@+id/txt_nama_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp"
            android:text="Nama Personel "
            android:textSize="@dimen/text_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_pangkat_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_half"
            android:text="Pangkat Personel "
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/txt_nrp_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_half"
            android:text="NRP Personel "
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/txt_jabatan_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_half"
            android:text="Jabatan Personel "
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/txt_kesatuan_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kesatuan Personel "
            android:textSize="@dimen/text_14" />
        <TextView
            android:id="@+id/txt_aktif_acc_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_half"
            android:text="Aktif / Tidak"
            android:textStyle="bold"
            android:textSize="@dimen/text_14" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
