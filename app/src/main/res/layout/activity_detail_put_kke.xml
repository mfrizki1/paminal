<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.putkke.DetailPutKkeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_white" />

        <include layout="@layout/view_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Putusan Kode Etik" />

        <TextView
            android:id="@+id/txt_no_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Put Kke" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Laporan Polisi Kode Etik" />

        <TextView
            android:id="@+id/txt_no_lp_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No LP" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Berkas Pemeriksaan" />

        <TextView
            android:id="@+id/txt_no_berkas_pemeriksaan_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Berkas Pemeriksaan" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keputusan Kapolda" />

        <TextView
            android:id="@+id/txt_keputusan_kapolda_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keputusan Kapolda" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surat Persangkaan" />

        <TextView
            android:id="@+id/txt_surat_persangkaan_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Surat Persangkaan" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuntutan Pelanggaran" />

        <TextView
            android:id="@+id/txt_tuntutan_pelanggaran_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Tuntutan Pelanggaran, Tanggal Tuntutan Pelanggaran" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sanksi Hasil Putusan" />

        <TextView
            android:id="@+id/txt_sanksi_hasil_putusan_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sanksi Hasil Putusan" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketua Komisi" />

        <TextView
            android:id="@+id/txt_nama_ketua_komisi_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Ketua KOmisi" />

        <TextView
            android:id="@+id/txt_pangkat_nrp_ketua_komisi_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pangkat : NRP Ketua KOmisi" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wakil Ketua Komisi" />

        <TextView
            android:id="@+id/txt_nama_wakil_ketua_komisi_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Wakil Ketua KOmisi" />

        <TextView
            android:id="@+id/txt_pangkat_nrp_wakil_ketua_komisi_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pangkat : NRP Wakil Ketua KOmisi" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anggota Komisi" />

        <TextView
            android:id="@+id/txt_nama_anggota_komisi_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Anggota KOmisi" />

        <TextView
            android:id="@+id/txt_pangkat_nrp_anggota_komisi_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pangkat : NRP Anggota KOmisi" />

        <include layout="@layout/line_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Putusan" />

        <TextView
            android:id="@+id/txt_lokasi_sidang_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kota Putusan" />

        <TextView
            android:id="@+id/txt_tanggal_putusan_put_kke_detail"
            style="@style/JustText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal Putusan" />

        <include layout="@layout/line_separator" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_put_kke_detail"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8dp"
            android:text="@string/edit_data" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_generate_put_kke_detail"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/generate_dokumen" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_see_doc_put_kke_detail"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:text="Lihat Dokumen" />
    </LinearLayout>
</ScrollView>