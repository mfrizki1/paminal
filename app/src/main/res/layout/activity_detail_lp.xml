<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.lp.DetailLpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_white" />

        <include layout="@layout/view_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Laporan Polisi"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_no_lp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="No LP 1234/"
                android:textSize="@dimen/text_14" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_quarter"
                android:text="Personel Dilapor"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nama_lp_dilapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Faisal Rizki"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_pangkat_nrp_lp_dilapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Pangkat : Briptu  NRP : 1234568"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_jabatan_lp_dilapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="JABATAN"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_kesatuan_lp_dilapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Polda Banjarmasin"
                android:textSize="@dimen/text_14" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_quarter"
                android:text="Personel Terlapor"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nama_lp_terlapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Faisal Rizki"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_pangkat_nrp_lp_terlapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Pangkat : Briptu  NRP : 1234568"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_jabatan_lp_terlapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="JABATAN"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_kesatuan_lp_terlapor_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Polda Banjarmasin"
                android:textSize="@dimen/text_14" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_quarter"
                android:text="Alat Bukti"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_alat_bukti_lp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:text="Alat bukti \n ALAT BUTKI\n ALAT BUKTI"
                android:textSize="@dimen/text_14" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_quarter"
                android:text="Pasal Yang Dilanggar"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_pasal_detail_lp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                tools:listitem="@layout/item_pasal_lp" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_quarter"
                android:text="Saksi"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_saksi_detail_lp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                tools:listitem="@layout/item_pasal_lp" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_quarter"
                android:text="Keterangan"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_ket_lp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:fontFamily="sans-serif-light"
                android:text="Melakukan Samting "
                android:textSize="@dimen/text_14" />

            <include layout="@layout/layout_separator" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_lp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Edit Data"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_pasal_lp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/half"
                android:text="Edit Data Pasal"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_saksi_lp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/half"
                android:text="Edit Data Saksi"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
