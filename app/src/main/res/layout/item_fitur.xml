<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_fitur"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/space_12dp"
        android:src="@drawable/ic_paminal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_fitur"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textSize="@dimen/text_16"
        android:gravity="center"
        android:text="Fitur A"
        app:layout_constraintEnd_toEndOf="@+id/img_fitur"
        app:layout_constraintStart_toStartOf="@+id/img_fitur"
        app:layout_constraintTop_toBottomOf="@+id/img_fitur" />


</androidx.constraintlayout.widget.ConstraintLayout>