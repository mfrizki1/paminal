<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.lp.disiplin.DetailLpDisiplinActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar_white" />

        <include layout="@layout/view_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Laporan Polisi" />

        <TextView
            android:id="@+id/txt_detail_no_lp_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="LP/ LP / lp"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personel Terlapor" />

        <TextView
            android:id="@+id/txt_detail_nama_terlapor_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Nama : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_pangkat_nrp_terlapor_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Pangkat : NRP : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_jabatan_terlapor_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Jabatan : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_kesatuan_terlapor_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kesatuan : "
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan Terlapor" />

        <TextView
            android:id="@+id/txt_detail_keterangan_pelapor_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="@string/paragraf"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macam Pelanggaran" />

        <TextView
            android:id="@+id/txt_detail_macam_pelanggaran_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="@string/paragraf"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />


        <LinearLayout
            android:id="@+id/ll_detail_personel_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/TitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personel Pelapor" />

            <TextView
                android:id="@+id/txt_detail_nama_pelapor_disiplin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Nama : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_pangkat_nrp_pelapor_disiplin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Pangkat : NRP : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_jabatan_pelapor_disiplin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Jabatan : "
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/txt_detail_kesatuan_pelapor_disiplin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/space_12dp"
                android:layout_marginTop="@dimen/space_half"
                android:text="Kesatuan : "
                android:textSize="@dimen/text_16" />

            <include layout="@layout/layout_separator" />

        </LinearLayout>


        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kronologis Pelapor" />

        <TextView
            android:id="@+id/txt_detail_kronologis_pelapor_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="@string/paragraf"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasal Yang Dilanggar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detail_pasal_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_16dp"
            android:layout_marginTop="@dimen/space_half"
            tools:listitem="@layout/item_pasal_lp" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rincian Pelanggaran" />

        <TextView
            android:id="@+id/txt_detail_rincian_pelanggaran_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="@string/paragraf"
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dibuat Laporan" />

        <TextView
            android:id="@+id/txt_detail_kota_buat_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kota : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_tgl_buat_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Tanggal : "
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <TextView
            style="@style/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pimpinan" />

        <TextView
            android:id="@+id/txt_detail_nama_pimpinan_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Nama : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_pangkat_nrp_pimpinan_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="PAngkat: NRP : "
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/txt_detail_jabatan_pimpinan_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Jabatan : "
            android:textSize="@dimen/text_16" />
        <TextView
            android:id="@+id/txt_detail_kesatuan_pimpinan_disiplin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_half"
            android:text="Kesatuan : "
            android:textSize="@dimen/text_16" />

        <include layout="@layout/layout_separator" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_disiplin"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Laporan" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_edit_pasal_disiplin"
            style="@style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Pasal" />
    </LinearLayout>
</ScrollView>