<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.lhp.edit.lidik.EditLidikLhpActivity">

    <include layout="@layout/layout_toolbar_white" />

    <include layout="@layout/view_separator" />

    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Data Personel Penyelidik" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_choose_personel_lidik_edit"
        style="@style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:text="Pilih Data Personel" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_personel_lidik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_12dp"
        android:layout_marginTop="@dimen/space_8dp"
        app:cardCornerRadius="8dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/space_8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personel"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <include layout="@layout/layout_separator" />

            <TextView
                android:id="@+id/txt_nama_lidik_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_8dp"
                android:text="Nama Personel "
                android:textSize="@dimen/text_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_pangkat_lidik_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:text="Pangkat Personel "
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_nrp_lidik_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:text="NRP Personel "
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_jabatan_lidik_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:text="Jabatan Personel "
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/txt_kesatuan_lidik_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_half"
                android:text="Kesatuan Personel "
                android:textSize="@dimen/text_14" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        style="@style/TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih Status Personel Penyelidik" />

    <RadioGroup
        android:id="@+id/rg_lidik_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8dp"
        android:paddingHorizontal="@dimen/space_12dp">

        <RadioButton
            android:id="@+id/rb_ketua_lidik_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ketua Tim" />

        <RadioButton
            android:id="@+id/rb_anggota_lidik_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anggota" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save_lidik_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pangkat"
        android:layout_marginHorizontal="@dimen/space_12dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:text="@string/save"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_lidik_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pangkat"
        android:layout_marginHorizontal="@dimen/space_12dp"
        android:layout_marginTop="@dimen/space_8dp"
        android:text="@string/delete"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:backgroundTint="@color/white" />

</LinearLayout>