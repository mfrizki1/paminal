<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_clickable"
    android:orientation="vertical"
    android:background="@drawable/bg_selected_item"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_1_clickable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="@dimen/space_12dp"
            android:layout_marginVertical="@dimen/space_12dp"
            android:layout_marginTop="@dimen/space_8dp"
            android:text="Nama Pendidikan"
            android:textSize="@dimen/space_16dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginVertical="@dimen/space_8dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/animated_check"
            android:visibility="gone"
            app:tint="@color/colorPrimary" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gainsboro">

    </View>


</LinearLayout>